---
import Card from '../components/Card.astro';
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import Layout from '../layouts/Layout.astro';

interface CardInterface {
	title: string;
	status: 'available' | 'soon';
	image: string;
	align: 'left' | 'center';
}

const cards: CardInterface[] = [
	{
		title: 'Chat',
		status: 'available',
		image: '/chat.png',
		align: 'left',
	},
	{
		title: 'Event list',
		status: 'available',
		image: '/event_list.png',
		align: 'left',
	},
	{
		title: 'More',
		status: 'soon',
		image: '/more.png',
		align: 'center',
	},
];
---

<Layout
	title='Streali - The best streaming visual editor'
	og={{
		title: 'Streali - The best streaming visual editor',
		description: 'Push your streaming to the next level with Streali',
		image: '/og.png',
		url: 'https://streali.com',
	}}
	twitter={{
		site: '@strealiapp',
		creator: '@strealiapp',
	}}
>
	<Header />

	<img
		class='fixed -top-1/4 -left-1/3 -z-10'
		src='/flare_purple.png'
		alt='Flare purple'
	/>
	<img
		class='fixed top-1/4 -right-1/2 -z-10'
		src='/flare_green.png'
		alt='Flare purple'
	/>

	<div class='container mx-auto my-36'>
		<h1 class='text-center font-title text-5xl font-semibold mb-6'>
			The best streaming<br />overlay editor
		</h1>
		<h2 class='text-center mb-10'>
			It has never been so easy to setup a beautiful stream.
		</h2>
		<div class='flex justify-center gap-3'>
			<a
				href='https://app.streali.com'
				class='inline-flex h-12 bg-primary-500 px-4 items-center rounded-md gap-2 hover:bg-primary-400 transition duration-200 font-bold'
				>Join Streali <i class='ri-arrow-right-s-line'></i>
			</a>
		</div>
	</div>

	<div class='container mx-auto mb-20 px-6'>
		<img src='/screen.png' alt='Chat editor' class='w-full h-auto' />
	</div>

	<div class='container mx-auto mb-20 px-6'>
		<h3 class='text-center font-title text-5xl font-semibold mb-10'>
			Our features
		</h3>
		<div class='grid grid-col-1 lg:grid-cols-3 gap-6'>
			{
				cards.map((card) => (
					<Card
						title={card.title}
						image={card.image}
						status={card.status}
						align={card.align}
					/>
				))
			}
		</div>
	</div>
	<Footer />
</Layout>
